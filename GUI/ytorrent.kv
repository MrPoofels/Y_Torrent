#:import Window kivy.core.window.Window

<ScalingText>:

# Define background color Template
<BackgroundColor@Widget>:
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<BackgroundLabel@Label+BackgroundColor>:
    background_color: 0, 0, 0, 0
    # Default the background color for this label
    # to r 0, g 0, b 0, a 0

<ToolbarButton@IconButton>:
	background_normal: ''
	background_color: 1, 1, 1, 1
	allow_stretch: True
	size: self.norm_image_size
	size_hint: None, 1
	width: self.height

<ScrollButton@Button>:
	background_normal: ''
	background_color: 1, 1, 1, 1
	color: 0, 0, 0, 1

<CardButton@IconButton>:
	background_normal: ''
	background_color: 1, 1, 1, 1
	allow_stretch: True
	canvas.before:
		Color:
			rgba: .5, .5, .5, 1
		Line:
			width: 1
			rectangle: self.x, self.y, self.width, self.height
	size_hint: None, 0.3
	width: self.height

<CardLabel@ScalingText>:
	markup: True
	text_size: self.size
	halign: 'left'
	valign: 'middle'
	color: 0, 0, 0, 1


<TorrentCard>:
	canvas.after:
		Color:
			rgba: 0.2, 0.2, 0.2, 1
		Line:
			width: 1.2
			rectangle: self.x, self.y, self.width, self.height
	rows: 1
	canvas:
    	Color:
            rgb: 1, 1, 1, 1
        Rectangle:
        	pos: self.pos
            size: self.width, self.height
	padding: 5
#	root layout
	BoxLayout:
		orientation: 'horizontal'
		spacing: 10
#		state control buttons
		GridLayout:
			size_hint: None, 1
			width: 0.3*self.height
			cols: 1
			spacing: 5
			CardButton:
				source: 'C:\\Users\\Yahav\\PycharmProjects\\Y_Torrent\\assets\\play_green.png'
				on_release: app.schedule_task(root.download_manager.unpause_all())
			CardButton:
				source: 'C:\\Users\\Yahav\\PycharmProjects\\Y_Torrent\\assets\\pause_yellow.png'
				on_release: app.schedule_task(root.download_manager.pause_all())
			CardButton:
				source: 'C:\\Users\\Yahav\\PycharmProjects\\Y_Torrent\\assets\\stop_red.png'
				on_release: app.schedule_task(root.download_manager.pause_all())
#		info rows
		BoxLayout:
			size_hint: 1, 1
			orientation: 'vertical'
#			title
			CardLabel:
				size_hint: 1, 0.25
				text: root.name
				text_height_multiplier: 0.7
#			ETA and progress bar
			StackLayout:
				size_hint: 1, 0.25
				CardLabel:
					size_hint: 0.25, 1
					text: root.eta
					text_height_multiplier: 0.6
				ProgressBar:
					size_hint: 0.75, 1
					max: root.download_manager.meta_info.size
					value: root.download_manager.bytes_downloaded
			BoxLayout:
				size_hint: 1, 0.25
#				up dw speed
				GridLayout:
					rows: 1
					CardLabel:
						text: root.download_speed
					CardLabel:
						text: root.upload_speed
#				seeders and leechers amount
				GridLayout:
					rows: 1
					CardLabel:
						text: root.seeders
					CardLabel:
						text: root.leechers
			CardLabel:
				size_hint: 1, 0.25
				text: root.percent






<HomeScreen>:

	cards_list_content: cards_list_content

	orientation: 'vertical'
	canvas:
		Color:
			rgb: 1, 1, 1, 1
		Rectangle:
			size: self.size
			pos: self.pos

	# Title
	BackgroundLabel:
		text: ' YTorrent'
		bold: True
		font_size: '25sp'
		background_color: 66/255, 160/255, 82/255, 1
		size_hint: 1, 0.05
		text_size: self.size
		halign: 'left'
		valign: 'middle'

	# Toolbar
	StackLayout:
		size_hint: 1, 0.05
		spacing: 3
		padding: 10, 0, 10, 0

		canvas:
			Color:
				rgb: 170/255, 170/255, 170/255
			Rectangle:
				size: self.size
				pos: self.pos

		ToolbarButton:
			source: 'C:\\Users\\Yahav\\PycharmProjects\\Y_Torrent\\assets\\add_torrent.png'
			on_release: app.schedule_task(app.add_torrent())
		ToolbarButton:
			source: 'C:\\Users\\Yahav\\PycharmProjects\\Y_Torrent\\assets\\play.png'
			on_release: app.schedule_task(app.unpause_all())
		ToolbarButton:
			source: 'C:\\Users\\Yahav\\PycharmProjects\\Y_Torrent\\assets\\pause.png'
			on_release: app.schedule_task(app.pause_all())

	# Main interface
	BoxLayout:
		orientation: 'horizontal'
		spacing: 40
		padding: 10

		# Torrent cards scrolling list
		ScrollView:
			padding: 0, 10, 0, 10
			do_scroll_x: False
			do_scroll_y: True
			size: self.size
			bar_color: [0.5, 0.5, 0.5, 1]
			bar_width: 12
			bar_margin: -40

			GridLayout:
				id: cards_list_content
				spacing: 10
				cols: 1
				size_hint_y: None
				row_default_height: '175dp'
				row_force_default: True


		Label:
			size_hint: 0, 1